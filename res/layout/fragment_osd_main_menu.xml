<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/osd_home"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="50dp"
    android:paddingBottom="50dp"
    android:paddingLeft="100dp"
    android:paddingRight="100dp" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="left|center_vertical"
        android:text="主菜单"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:layout_marginBottom="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/menu_server"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/osd_mserver_sel" />

        <ImageView
            android:id="@+id/menu_clock"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/osd_mclock_sel" />

        <ImageView
            android:id="@+id/menu_tools"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/osd_mtools_sel" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/menu_system"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/osd_msystem_sel" />

        <ImageView
            android:id="@+id/menu_filemanage"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/osd_mfilemanage_sel" />
        
        <ImageView
            android:id="@+id/menu_about"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/osd_mabout_sel" />

    </LinearLayout>

</LinearLayout>