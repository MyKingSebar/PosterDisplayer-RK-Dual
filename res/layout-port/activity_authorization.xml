<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/auth_bg"
    android:id="@+id/root" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.29"
        android:orientation="horizontal" >
        
        <ImageView
            android:id="@+id/imgv_auth_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@android:color/transparent" />
        
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent" />
        
        <ImageView
            android:id="@+id/imgv_auth_serverparam"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@android:color/transparent" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@android:color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.01"
        android:orientation="horizontal" >
        
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.45"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/txtv_auth_maininfo"
            style="@style/stl_auth_maininfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.445"
            android:background="@android:color/transparent" />
        
    </LinearLayout>

    <TextView
        android:id="@+id/txtv_auth_subinfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:background="@android:color/transparent"
        android:gravity="top|center_horizontal"
        android:paddingTop="15dp"
        style="@style/stl_auth_subinfo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.47"
        android:orientation="horizontal" >
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.025"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/TVAuthOnline"
            style="@style/stl_auth_subinfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center"
            android:textSize="16sp"
            android:text="@string/active_auth_code_online"
            android:clickable="true" />
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.975"
            android:background="@android:color/transparent" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.73"
        android:background="@android:color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.4"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.9"
            android:background="@android:color/transparent" />
        
        <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="10"
	        android:orientation="vertical" >

	        <ImageView
	            android:id="@+id/imgv_auth_getdevinfo"
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:focusable="true"
	            android:background="@drawable/auth_getdevinfo_sel" />
	
	        <ImageView
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="0.27"
	            android:background="@android:color/transparent" />
	
	        <ImageView
	            android:id="@+id/imgv_auth_importauthcode"
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:focusable="true"
	            android:background="@drawable/auth_importauthcode_sel" />
	
	        <ImageView
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="0.27"
	            android:background="@android:color/transparent" />
	
	        <ImageView
	            android:id="@+id/imgv_auth_imtorupdkey"
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:focusable="true"
	            android:background="@drawable/auth_importkey_sel" />
        
        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:background="@android:color/transparent" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.4"
        android:background="@android:color/transparent" />
    
</LinearLayout>